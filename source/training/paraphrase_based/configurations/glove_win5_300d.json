{
  "dataset_reader": {
    "type": "nc_paraphrases_data_reader",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "train_data_path": "data/ncs_paraphrase_train.jsonl",
  "validation_data_path": "data/ncs_paraphrase_val.jsonl",
  "model": {
    "type": "paraphrase_composition_model",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "output/distributional/glove/win5/300d/embeddings.txt.gz",
        "embedding_dim": 300,
        "trainable": false
      }
    },
    "encoder": {
      "type": "lstm",
      "bidirectional": false,
      "input_size": 300,
      "hidden_size": 300,
      "num_layers": 1
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size" : 10
  },
  "trainer": {
    "num_epochs": 500,
    "patience": 20,
    "cuda_device": 1,
    "grad_clipping": 5.0,
    "validation_metric": "-loss",
    "optimizer": {
      "type": "adagrad"
    }
  }
}